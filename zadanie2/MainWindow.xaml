<Window x:Class="zadanie2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zadanie2"
        mc:Ignorable="d"
        Title="zadanie1" Height="350" Width="400" Background="MistyRose">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Введите возраст:" Margin="0,12"/>
        <TextBox x:Name="vozrast" Grid.Column="1" Grid.Row="0" Margin="10,10,10,10"/>
        <Label Content="описание:" Grid.Row="1" Margin="68,12,10,12"/>
        <TextBox x:Name="otvet" Grid.Column="1" Grid.Row="1" Margin="10,10,10,10"/>
        <Button Background="LightPink" x:Name="knopka" Grid.Column="1" Grid.Row="2" Content="ok" Margin="36,10,36,10" Click="knopka_Click"/>
    </Grid>
</Window>
